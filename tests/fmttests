				[ThemeString("FOOBARBAZ", ThemeAttr("types", "generic"))],
				[ThemeString("-----END CERTIFICATE-----", ThemeAttr("types", "separator"))],
			 ], None),
			("-----BEGIN CERTIFICATE-----\n"
			 "FOOBARBAZ\n"
			 "-----END CERTIFICATE-----", {"raw": True,}, [
				[ThemeString("-----BEGIN CERTIFICATE-----", ThemeAttr("types", "generic"))],
				[ThemeString("FOOBARBAZ", ThemeAttr("types", "generic"))],
