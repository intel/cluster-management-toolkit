                              f"          message: {str(e)}\n" \
                              f"         expected: {len(expected_result)}\n" \
                              f"{yaml_dump(expected_result, base_indent=17)}"
                    result = False
                    break
    return message, result


def test_get_subsets_info(verbose: bool = False) -> tuple[str, bool]:
    message = ""
    result = True

    fun = infogetters.get_subsets_info

    if result:
        test_obj = {
            "subsets": [
                {
                    "addresses": [
                        {
