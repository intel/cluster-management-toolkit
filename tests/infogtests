import sys
from typing import Any
import yaml

from clustermanagementtoolkit import cmtlib

from clustermanagementtoolkit.cmtpaths import DEFAULT_THEME_FILE

from clustermanagementtoolkit.cmttypes import deep_get, deep_set, DictPath, FilePath, StatusGroup

from clustermanagementtoolkit.ansithemeprint import ANSIThemeStr
from clustermanagementtoolkit.ansithemeprint import ansithemeprint, init_ansithemeprint

from clustermanagementtoolkit import curses_helper

from clustermanagementtoolkit import infogetters

TEST_DIR = FilePath(PurePath(__file__).parent).joinpath("testpaths")

# unit-tests for infogetters.py


def yaml_dump(data: Any, base_indent: int = 4) -> str:
    result = ""
    dump = yaml.dump(data)
    for line in dump.splitlines():
        result += f"{' '.ljust(base_indent)}{line}\n"
    return result


def test_process_value(verbose: bool = False) -> tuple[str, bool]:
    message = ""
    result = True

    curses_helper.read_theme(configthemefile=DEFAULT_THEME_FILE,
                             defaultthemefile=DEFAULT_THEME_FILE)

    fun = infogetters.process_value

    if result:
        # Indata format:
        # (value, vtype, kwargs, expected_result, expected_exception)
        testdata: tuple = (
            (None, "str", {}, "", None),
            ("foo\nbar", "str", {}, "foo\\nbar", None),
            ("\\\"foo\\\"", "str", {"replace_quotes": "pretty"}, "“foo“", None),
            ("\\\"foo\\\"", "str", {"replace_quotes": "same"}, "\"foo\"", None),
            (1, "str", {}, 1, None),
            (1.0, "float", {}, "1.0", None),
            (1, "int", {}, "1", None),
            (True, "bool", {}, "True", None),
            ((1, 2, 3), "int", {"action": "sum"}, 6, None),
            ([1, 2, 3], "int", {"action": "sum"}, 6, None),
            ((1, 2, 3), "int", {}, ["1", "2", "3"], None),
            ("3", "cpu_usage", {}, "3000.0", None),
            (["3", "5"], "cpu_usage", {"action": "sum"}, "8000.0", None),
            ("3", "cpu_usage_round", {}, "3", None),
            ("15985472Ki", "mem_usage", {}, "15.2GiB", None),
            (["15985472Ki", "15909864Ki"], "mem_usage", {"action": "sum"}, "30.4GiB", None),
            (358255783, "disk_usage", {}, "341MiB", None),
            (None, "len", {}, "0", None),
            ("foobar", "len", {}, "6", None),
            ([1, 2], "len", {}, "2", None),
            (0, "unix_timestamp", {}, datetime.fromtimestamp(0), None),
            ("1970-01-01 02:00:00", "timestamp", {},
             datetime.strptime("1970-01-01 02:00:00+00:00", "%Y-%m-%d %H:%M:%S%z"), None),
            (["answer", 42], ["raw", "raw"], {}, ["answer", 42], None),
            (["answer", 42], [], {}, ["answer", 42], None),
            (["answer", "fortytwo"], ["name", "name"], {}, ["answer", "fortytwo"], None),
            (("Pod", ""), ["kind", "api_group"], {}, ("Pod", ""), None),
            (("Pod", "v1"), ["kind", "api_group"], {}, ("Pod", ""), None),
            (("DaemonSet", "apps"), ["kind", "api_group"], {}, ("DaemonSet", ""), None),
            (("DaemonSet", "apps/v1"), ["kind", "api_group"], {}, ("DaemonSet", ""), None),
            (("Tensorboard", "tensorboard.kubeflow.org/v1"), ["kind", "api_group"], {},
             ("Tensorboard", "tensorboard.kubeflow.org"), None),
            (["answer", "unknown"], ["name", "skip"], {}, ["answer", ""], None),
            (["answer", "unknown"], ["unknown", "skip"], {}, None, ValueError),
            ("foo", "raw", {}, "foo", None),
            (42, "raw", {}, 42, None),
            (":", "separator", {}, ":", None),
            (":", "unknown", {}, None, ValueError),
        )

        for value, vtype, kwargs, expected_result, expected_exception in testdata:
            try:
                tmp = fun(value, vtype, **kwargs)
                if tmp != expected_result:
                    message = f"{fun.__name__}() did not yield expected result:\n" \
                              f"            value: {value}\n" \
                              f"            vtype: {vtype}\n" \
                              f"           result: {tmp} (type: {type(tmp)})\n" \
                              f"  expected result: {expected_result} " \
                              f"(type: {type(expected_result)})\n" \
                              "           kwargs:\n" \
                              f"{yaml_dump(kwargs, base_indent=17)}"
                    result = False
                    break
            except Exception as e:
                if expected_exception is not None:
                    if isinstance(e, expected_exception):
                        pass
                    else:
                        message = f"{fun.__name__}() did not yield expected result:\n" \
                                  f"            value: {value}\n" \
                                  f"            vtype: {vtype}\n" \
                                  f"        exception: {type(e)}\n" \
                                  f"          message: {str(e)}\n" \
                                  f"         expected: {expected_exception}\n" \
                                  "           kwargs:\n" \
                                  f"{yaml_dump(kwargs, base_indent=17)}"
                        result = False
                        break
                else:
                    message = f"{fun.__name__}() did not yield expected result:\n" \
                              f"            value: {value}\n" \
                              f"            vtype: {vtype}\n" \
                              f"        exception: {type(e)}\n" \
                              f"          message: {str(e)}\n" \
                              f"  expected result: {expected_result}\n" \
                              "           kwargs:\n" \
                              f"{yaml_dump(kwargs, base_indent=17)}"
                    result = False
                    break
    return message, result


def test_transform_filter(verbose: bool = False) -> tuple[str, bool]:
    message = ""
    result = True

    fun = infogetters.transform_filter

    if result:
        # Indata format:
        # (transformations, value, expected_result, expected_exception)
        testdata: tuple = (
            ("foo", {}, "foo", None),
            ("foo", {"foo": "bar"}, "bar", None),
            ("foo", {"baz": "bar"}, "foo", None),
        )

        for value, transformations, expected_result, expected_exception in testdata:
            try:
                tmp = fun(value, transformations)
                if tmp != expected_result:
                    message = f"{fun.__name__}() did not yield expected result:\n" \
                              f"            value: {value}\n" \
                              f"           result: {tmp} (type: {type(tmp)})\n" \
                              f"  expected result: {expected_result} " \
                              f"(type: {type(expected_result)})\n" \
                              "  transformations:\n" \
                              f"{yaml_dump(transformations, base_indent=17)}"
                    result = False
                    break
            except Exception as e:
                if expected_exception is not None:
                    if isinstance(e, expected_exception):
                        pass
                    else:
                        message = f"{fun.__name__}() did not yield expected result:\n" \
                                  f"            value: {value}\n" \
                                  f"        exception: {type(e)}\n" \
                                  f"          message: {str(e)}\n" \
                                  f"         expected: {expected_exception}\n" \
                                  "  transformations:\n" \
                                  f"{yaml_dump(transformations, base_indent=17)}"
                        result = False
                        break
                else:
                    message = f"{fun.__name__}() did not yield expected result:\n" \
                              f"            value: {value}\n" \
                              f"        exception: {type(e)}\n" \
                              f"          message: {str(e)}\n" \
                              f"  expected result: {expected_result}\n" \
                              "  transformations:\n" \
                              f"{yaml_dump(transformations, base_indent=17)}"
                    result = False
                    break
    return message, result


def test_format_controller(verbose: bool = False) -> tuple[str, bool]:
    message = ""
    result = True

    fun = infogetters.format_controller

    if result:
        # Indata format:
        # (field, formatting, default, expected_result, expected_exception)
        testdata: tuple = (
            (
                (("DaemonSet", "apps"), "coredns-76f75df574-fbjjx"),
                "full",
                ('DaemonSet.apps', 'coredns-76f75df574-fbjjx'),
                None,
            ),
            (
                (("Node", ""), "coredns-76f75df574-fbjjx"),
                "full",
                ("Node", "coredns-76f75df574-fbjjx"),
                None,
            ),
            (
                (("TFJob", "kubeflow.org"), "coredns-76f75df574-fbjjx"),
                "full",
                ("TFJob.kubeflow.org", "coredns-76f75df574-fbjjx"),
                None,
            ),
            (
                (("DaemonSet", "apps"), "coredns-76f75df574-fbjjx"),
                "mixed",
                ("DaemonSet", "coredns-76f75df574-fbjjx"),
                None,
            ),
            (
                (("Node", ""), "coredns-76f75df574-fbjjx"),
                "mixed",
                ("Node", "coredns-76f75df574-fbjjx"),
                None,
            ),
            (
                (("TFJob", "kubeflow.org"), "coredns-76f75df574-fbjjx"),
                "mixed",
                ("TFJob.kubeflow.org", "coredns-76f75df574-fbjjx"),
                None,
            ),
            (
                (("DaemonSet", "apps"), "coredns-76f75df574-fbjjx"),
                "short",
                ("DaemonSet", "coredns-76f75df574-fbjjx"),
                None,
            ),
            (
                (("Node", ""), "coredns-76f75df574-fbjjx"),
                "short",
                ("Node", "coredns-76f75df574-fbjjx"),
                None,
            ),
            (
                (("TFJob", "kubeflow.org"), "coredns-76f75df574-fbjjx"),
                "short",
                ("TFJob", "coredns-76f75df574-fbjjx"),
                None,
            ),
            (
                (("DaemonSet", "apps"), "coredns-76f75df574-fbjjx"),
                "",
                ("", "coredns-76f75df574-fbjjx"),
                None,
            ),
            (
                (("Node", ""), "coredns-76f75df574-fbjjx"),
                "",
                ("", "coredns-76f75df574-fbjjx"),
                None,
            ),
            (
                (("TFJob", "kubeflow.org"), "coredns-76f75df574-fbjjx"),
                "",
                ("", "coredns-76f75df574-fbjjx"),
                None,
            ),
            (
                (("Node", ""), "coredns-76f75df574-fbjjx"),
                "notavalidoption",
                None,
                ValueError,
            ),
        )

        for controller, show_kind, expected_result, expected_exception in testdata:
            try:
                tmp = fun(controller, show_kind)
                if tmp != expected_result:
                    message = f"{fun.__name__}() did not yield expected result:\n" \
                              f"        show_kind: {show_kind}\n" \
                              f"           result: {tmp}\n" \
                              f"  expected result: {expected_result}"
                    result = False
                    break
            except Exception as e:
                if expected_exception is not None:
                    if isinstance(e, expected_exception):
                        pass
                    else:
                        message = f"{fun.__name__}() did not yield expected result:\n" \
                                  f"        show_kind: {show_kind}\n" \
                                  f"        exception: {type(e)}\n" \
                                  f"          message: {str(e)}\n" \
                                  f"         expected: {expected_exception}"
                        result = False
                        break
                else:
                    message = f"{fun.__name__}() did not yield expected result:\n" \
                              f"        show_kind: {show_kind}\n" \
                              f"        exception: {type(e)}\n" \
                              f"          message: {str(e)}\n" \
                              f"  expected result: {expected_result}"
                    result = False
                    break
    return message, result


def test_get_key_value_info(verbose: bool = False) -> tuple[str, bool]:
    message = ""
    result = True

    fun = infogetters.get_key_value_info

    if result:
        # Indata format:
        # (obj, expected_result, expected_exception)
        testdata: tuple = (
            (
                {
                    "auth-extra-groups":
                        "c3lzdGVtOmJvb3RzdHJhcHBlcnM6a3ViZWFkbTpkZWZhdWx0LW5vZGUtdG9rZW4=",
                    "token-id": "MzVpbGhv",
                    "empty": "",
                    "too-long": "42".ljust(10000),
                    "base64-utf-8": "QSB0ZXN0IHN0cmluZyB3aXRoIFVURi3ikacK",
                },
                [
                    {
                        "key": "auth-extra-groups",
                        "ref": {
                            "key": "auth-extra-groups",
                            "value": "system:bootstrappers:kubeadm:default-node-token",
                            "decoded_value": "system:bootstrappers:kubeadm:default-node-token",
                            "fully_decoded_value":
                                "system:bootstrappers:kubeadm:default-node-token",
                            "vtype": "string",
                            "vlen": 47
                        },
                        "decoded_value": "system:bootstrappers:kubeadm:default-node-token",
                        "value": "system:bootstrappers:kubeadm:default-node-token",
                        "vtype": "string",
                        "vlen": 47
                    },
                    {
                        "key": "token-id",
                        "ref": {
                            "key": "token-id",
                            "value": "35ilho",
                            "decoded_value": "35ilho",
                            "fully_decoded_value": "35ilho",
                            "vtype": "string",
                            "vlen": 6
                        },
                        "decoded_value": "35ilho",
                        "value": "35ilho",
                        "vtype": "string",
                        "vlen": 6
                    },
                    {
                        "key": "empty",
                        "ref": {
                            "key": "empty",
                            "value": "",
                            "decoded_value": "",
                            "fully_decoded_value": "",
                            "vtype": "empty",
                            "vlen": 0
                        },
                        "decoded_value": "",
                        "value": "",
                        "vtype": "empty",
                        "vlen": 0
                    },
                    {
                        "key": "too-long",
                        "ref": {
                            "key": "too-long",
                            "value": "42".ljust(10000),
                            "decoded_value": "42".ljust(10000)[0:8192 - 1],
                            "fully_decoded_value": "42".ljust(10000),
                            "vtype": "string [truncated]",
                            "vlen": 10000
                        },
                        "decoded_value": "42".ljust(10000)[0:8192 - 1],
                        "value": "42".ljust(10000),
                        "vtype": "string [truncated]",
                        "vlen": 10000
                    },
                    {
                        "key": "base64-utf-8",
                        "ref": {
                            "key": "base64-utf-8",
                            "value": "QSB0ZXN0IHN0cmluZyB3aXRoIFVURi3ikacK",
                            "decoded_value": "QSB0ZXN0IHN0cmluZyB3aXRoIFVURi3ikacK",
                            "fully_decoded_value": "A test string with UTF-⑧\n",
                            "vtype": "base64-utf-8",
                            "vlen": 36
                        },
                        "decoded_value": "QSB0ZXN0IHN0cmluZyB3aXRoIFVURi3ikacK",
                        "value": "QSB0ZXN0IHN0cmluZyB3aXRoIFVURi3ikacK",
                        "vtype": "base64-utf-8",
                        "vlen": 36
                    },
                ],
                None,
            ),
        )

        for obj, expected_result, expected_exception in testdata:
            try:
                tmp = fun(_vlist=obj)
                if len(tmp) != len(expected_result):
                    message = f"{fun.__name__}() did not yield expected result:\n" \
                              f"              len: {len(tmp)}\n" \
                              f"     expected len: {len(expected_result)}"
                    result = False
                    break
                else:
                    for i, item in enumerate(tmp):
                        tmp2 = dict(item.__dict__)
                        for key, value in expected_result[i].items():
                            result_value = deep_get(tmp2, DictPath(key))
                            if result_value != value:
                                message = f"{fun.__name__}() did not yield expected result:\n" \
                                          f"           result: {result_value}\n" \
                                          f"         expected: {value}"
                                result = False
                                break
                        if not result:
                            break
            except Exception as e:
                if expected_exception is not None:
                    if isinstance(e, expected_exception):
                        pass
                    else:
                        message = f"{fun.__name__}() did not yield expected result:\n" \
                                  f"        exception: {type(e)}\n" \
                                  f"          message: {str(e)}\n" \
                                  f"         expected: {expected_exception}"
                        result = False
                        break
                else:
                    message = f"{fun.__name__}() did not yield expected result:\n" \
                              f"        exception: {type(e)}\n" \
                              f"          message: {str(e)}\n" \
                              f"         expected: {len(expected_result)}\n" \
                              f"{yaml_dump(expected_result, base_indent=17)}"
                    result = False
                    break
    return message, result


