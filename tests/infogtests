    message = ""
    result = True

    fun = infogetters.get_promrules_info

    if result:
        # Indata format:
        # (obj, expected_result, expected_exception)
        testdata: tuple = (
            (
                {
                    "spec": {
                        "groups": [
                            {
                                "name": "GrafanaAlerts",
                                "rules": [
                                    {
                                        "alert": "GrafanaRequestsFailing",
                                        "annotations": {
