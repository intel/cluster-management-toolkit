    ("get_kubernetes_objects()",): {
        "callable": test_get_kubernetes_objects,
        "result": None,
    },
    ("get_events()",): {
        "callable": test_get_events,
        "result": None,
    },
    ("get_svc_port_target_endpoints()",): {
        "callable": test_get_svc_port_target_endpoints,
