                    ),
                    (
                        "kubelet",
                        "1.32.0-1.1"
                    ),
                    (
                        "kubernetes-cni",
                        "1.6.0-1.1 "
                    ),
                    (
                        "kubernetes-client",
                        "N/A"
                    ),
                    (
                        "kubernetes-master",
                        "N/A"
                    ),
                    (
                        "kubernetes-node",
                        "N/A"
                    ),
                    (
                        "runc",
                        "1.1.15+ds1-1+b1"
                    )
                ],
                [
                    (
                        "ansible",
                        "11.1.0+dfsg-1"
                    ),
                    (
                        "ansible-core",
                        "2.18.1-4"
                    ),
                    (
                        "containerd",
                        "1.7.24~ds1-4"
                    ),
                    (
                        "containerd.io",
                        "N/A"
